<style>
    .maincontainer{
   background: #6ab04c;
   width: 100vw;
   height: 100vh;
   display: flex;
   justify-content: center;
    align-items: center;
    }
   
   .box
   {
     width:70%;
     height:auto;
     background:#badc58;
     border-radius: 10px ;
     padding : 15px;
   
   }
   .heading{
     font-size: 16px;
     letter-spacing: 1px;
     font-weight: bold;
     font-size: 24px;
     margin-bottom: 10px;
   }
   .genderstyle{
     display: flex;
     flex-direction: row;
     justify-content: space-evenly;
   }
