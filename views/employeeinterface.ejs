 .maincontainer{
background: #51cece;
width: 100%;
height:100%;
display: flex;
justify-content: center;
 align-items: center;
 }

.box
{
  width:70%;
  height:auto;
  background:#168a8a;
  border-radius: 10px ;
  padding : 15px;

}
.heading{
  font-size: 16px;
  letter-spacing: 1px;
  font-weight: bold;
