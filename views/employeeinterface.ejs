<html>
    <head>
    <title>Employee Interface</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>
  <div class = "maincontainer" >
    <div class="box">
      <div class="heading">
        <a href="/employee/displayemployeedetails">
        <img src="/images/view.png" width="50" align="right"/></a>
        <img src="/images/emloyeeicon.png" width="40">
        Employee Details
        </div>
          <form action ="/employee/employeesubmit" method="post" enctype="multipart/form-data" class="row g-3">
            <div class="col-md-6">
              <label for="Employee first Name" class="form-label"><b>first Name</b></label>
                <input type="text" class="form-control" id="Employee first Name" name="first_name" placeholder="first name">  
                 </div>
           <div class="col-md-6">
            <label for="Employee last Name" class="form-label"><b>last name  </b> </label>
            <input type="text" class="form-control" id="Employee last Name" name="last_name" placeholder="last name"> 
        </div>
        <div class="col-md-4">
          <b>Date of birth</b>
          <input type="date" class="form-control" name="DOB">
          </div>
          <div class="col-md-2 ">
            <label for="gender" class ="form-label"><b>Gender</b></label>
            <div class="genderstyle">
            <span class=" form-check">
            <input class="form-check-input" type="radio" name="gender" value="male" id="gender">
            <label class="form-check-lebel" for="gender">male</label>

            </span>
          <span class=" form-check">
            <input class="form-check-input" name="gender" type="radio" value="female" id="gender">
            <label class="form-check-lebel" for="gender">female</label>

          </span>
        </div>
        </div>
        
        <div class="col-md-6">
          <label for="inputState"  class="form-label"><b>State</b></label>
          <select id="inputState" name="state" class="form-select">
            <option selected>Choose...</option>
          </select>
        </div>
        <div class="col-md-4">
          <label for="inputCity"  class="form-label"><b>City</b></label>
          <select id="inputCity" name="city" class="form-select">
            <option selected>Choose...</option>
            
          </select>
        </div>
        <div class="col-md-4">
          <label for="mobile"  class="form-label"> <b>Mobile number</b></label>
            <input type="text" class="form-control" id="mobile" name="mob" placeholder="mobile number">  
             </div>
             <div class="col-md-4">
              <label for="Address" name="address" class="form-label"><b>Address</b></label>
                <input type="text" class="form-control" id="Address" name="Address" placeholder="address">  
                 </div>
              <div class="col-md-4">
               <label for="formFile"  class="form-label"><b>Picture</b></label>
               <input class="form-control" name="picture" type="file" id="formFile">
              </div>
             <div class="mb-4">

           <button type="submit" class="btn btn-success"><b>Submit</b></button>
           <button type="reset" class="btn btn-danger"><b>Reset</b></button>
              <div class="col-md-4" style ="display:flex; justify-content:center; padding:5px; font-weight:bolder;">
                <%= message %>
              </div>
            
    </div>
    </form>
    </div>
    </div>
  </form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</html>