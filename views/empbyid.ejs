<style>
  .maincontainer {
    background: #e17055;
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .box {
    width: 50%;
    height: auto;
    background: #fdcb6e;
    border-radius: 10px;
    padding: 15px;

  }

  .heading {
    font-size: 16px;
    letter-spacing: 1px;
    font-weight: bold;
    font-size: 24px;
    margin-bottom: 10px;
  }

  .genderstyle {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }
</style>


<html>

<head>
  <title>Employee Interface</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
  <script src="/javascripts/project.js"></script>
  <script>
    $(document).ready(function () {
      var gen = $('#gn').val()
      $('.gend').map((i, item) => {

        if ($(item).val() == gen) {
          $(item).prop('checked', true)
        }
      })
    })
  </script>
</head>
<div class="maincontainer">
  <div class="box">
    <div class="heading">
      <img src="/images/emloyeeicon.png" width="40">
      Employee Details Updation
    </div>
    <form action="/employee/employee_Edit_Delete" method="post" class="row g-3">
      <input type="hidden" name="emp_id" value="<%=data.emp_id %>">
      <input type="hidden" id="gn" value="<%=data.gender%>" />
      <div class="col-md-6">

        <label for="Employee first Name" class="form-label"><b>first Name</b></label>
        <input type="text" class="form-control" id="Employee first Name" name="first_name" placeholder="first name"
          value="<%=data.first_name %>">
      </div>
      <div class="col-md-6">
        <label for="Employee last Name" class="form-label"><b>last name</b> </label>
        <input type="text" class="form-control" id="Employee last Name" name="last_name" placeholder="last name"
          value="<%=data.last_name%>">
      </div>
      <div class="col-md-4">
        <b>Date of birth</b>
        <input type="date" class="form-control" name="DOB" value="<%=data.DOB%>">
      </div>
      <div class="col-md-2 ">
        <label for="gender" class="form-label"><b>Gender</b></label>
        <div class="genderstyle">
          <span class=" form-check">
            <input class="form-check-input gend" type="radio" name="gender" value="male" id="gender">
            <label class="form-check-lebel" for="gender">male</label>
          </span>
          <span class=" form-check">
            <input class="form-check-input gend" name="gender" type="radio" value="female" id="gender">
            <label class="form-check-lebel" for="gender">female</label>

          </span>
        </div>
      </div>

      <div class="col-md-6">
        <label for="inputState" class="form-label"><b>State</b></label>
        <select id="inputState" name="state" class="form-select">
          <option>
            <%=data.state %>
          </option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="inputCity" class="form-label"><b>City</b></label>
        <select id="inputCity" name="city" class="form-select">
          <option>
            <%=data.city %>
          </option>

        </select>
      </div>
      <div class="col-md-4">
        <label for="mobile" class="form-label"> <b>Mobile number</b></label>
        <input type="text" class="form-control" id="mobile" name="mob" placeholder="mobile number"
          value="<%=data.mob%>">
      </div>
      <div class="col-md-4">
        <label for="Address" name="address" class="form-label"><b>Address</b></label>
        <input type="text" class="form-control" id="Address" name="Address" placeholder="address"
          value="<%=data.Address%>">
      </div>

      <div class="mb-4">

        <button type="Submit" name="btn" value="Edit" class="btn btn-success"><b>Update</b></button>
        <button type="Submit" name="btn" value="delete" class="btn btn-danger"><b>Delete</b></button>
        <div class="col-md-4" style="display:flex; justify-content:center; padding:5px; font-weight:bolder;">

        </div>

      </div>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</html>